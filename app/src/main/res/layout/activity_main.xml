<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:alignmentMode="alignMargins"
        android:columnCount="1"
        android:columnOrderPreserved="false"
        android:padding="8dp"
        android:rowCount="3"
        >
        <!--row1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:layout_columnWeight="1"
            app:cardBackgroundColor="#632182"
            app:cardCornerRadius="7dp"
            app:cardElevation="4dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:drawableEnd="@color/colorPrimary"
                    android:text="БАШНЯ"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:rowCount="1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tvWls"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:drawableEnd="@color/colorPrimary"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="50dp"
                        android:textStyle="bold"
                        android:layout_weight="14"/>

                    <ProgressBar
                        android:id="@+id/pbWatersLevel"
                        android:visibility="visible"
                        android:layout_width="50dp"
                        android:onClick="onClickWlsCardView"
                        style="@style/Widget.ProgressBar.Vertical"
                        android:layout_height="150dp"
                        android:indeterminate="false"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="2dp"
                        android:max="1400"
                        android:progress="1000"
                        android:layout_weight="1"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvMonitoringWls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:drawableEnd="@color/colorPrimary"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:rowCount="1"/>
                <TextView
                    android:id="@+id/tvTimeDataWls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:drawableEnd="@color/colorPrimary"
                    android:textAlignment="center"
                    android:layout_marginBottom="5dp"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:rowCount="1"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <!--row2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            app:cardBackgroundColor="#632182"
            app:cardCornerRadius="7dp"
            app:cardElevation="4dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvUpp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:drawableEnd="@color/colorPrimary"
                    android:text="2-ой подъем"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:rowCount="1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tvMotor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:drawableEnd="@color/colorPrimary"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_weight="2"/>

                    <TextView
                        android:id="@+id/tvUPPMain"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:drawableEnd="@color/colorPrimary"
                        android:textColor="#FFFFFF"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_weight="3"/>

                    <TextView
                        android:id="@+id/tvUPPSecondary"
                        android:layout_width="0dp"
                        android:layout_marginTop="1dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:drawableEnd="@color/colorPrimary"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tvLastStartTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:drawableEnd="@color/colorPrimary"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:rowCount="1"/>
                <TextView
                    android:id="@+id/tvLastStopTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:drawableEnd="@color/colorPrimary"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:rowCount="1"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>
    <TextView
        android:id="@+id/tvLastUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawableEnd="@color/colorPrimary"
        android:textColor="#632182"
        android:textSize="10sp"
        android:layout_marginRight="4dp"
        android:textStyle="bold"
        android:gravity="right"/>
    <Button
        android:id="@+id/buttonPoll"
        android:onClick="onClickPollCurrent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5ABEB4"
        android:textColor="#FFFFFF"
        android:text="@string/update"
        android:layout_margin="4dp"
        android:elevation="4dp"
        />

</LinearLayout>